<h1>Listing picks</h1>

<table>
  <tr>
    <th>User</th>
    <th>Ip</th>
    <th>Subject</th>
    <th>Win pic</th>
    <th>Loss pic</th>
  </tr>

<% @picks.each do |pick| %>
  <tr>
    <td><%=h pick.user %></td>
    <td><%=h pick.ip %></td>
    <td><%=h pick.subject %></td>
    <td><%=h pick.win_pic_id %></td>
    <td><%=h pick.loss_pic_id %></td>
    <td><%= link_to 'Show', pick %></td>
    <td><%= link_to 'Edit', edit_pick_path(pick) %></td>
    <td><%= link_to 'Destroy', pick, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New pick', new_pick_path %>