<div class="row">
    	<div class="span10 offset1">
    	<!-- Masthead 
    	================================================== -->
		<header class="jumbotron subhead" id="overview">
			<div class="row">
				<div class="span2">
				  <h1>Pic</h1>
				  <p class="lead"></p>
	
				</div>
			</div>
						
		</header>
			
			<!-- a pic -->
			
			<div class="row">
		    <div class="span5  hero-unit">
		      		      <!-- 
		      <p>By default, Bootstrap's thumbnails are designed to showcase linked images with minimal required markup.</p>
		      -->
		      
		      <div class="row">
		        <div class="span4">
		            <%= link_to image_tag( @pic.original_pic ), {:controller => "pics", :action => "show"}, :id => @pic.id, :class=>"thumbnail" %>
		            
		            <div class="caption">
			               <table class="table table-striped table-condensed">
						        <thead>
						          <tr>
						           
						            <th class="yellow">scores</th>
						            <td class="blue"><%= @pic.scores.ceil %></td>
						            
						          </tr>
						        </thead>
						        <tbody>
						          <tr>
						          
						            <th>wins</th>
						            <td><%= @pic.wins %></td>
						        
						          </tr>
						          <tr>
						           
						            <th>losses</th>
						            <td><%= @pic.losses %></td>
						          
						          </tr>
						          <tr>
						      
						            <th>tags</th>
						            <td>
										<%= render :partial => "shared/tagtext",  :locals => {:pic => @pic } %> 
						            </td>
						         
						          </tr>
						          <tr>
						           
						            <th></th>
						            <td>See history pick</td>
						         
						          </tr>
						        </tbody>
						      </table>
			            </div>
		        </div>
		      </div>
		      
		      <div class="row">
		      	&nbsp;
		      </div>
		      
		      
		    </div>
			</div>
	    </div>  <!--span10 -->
	   </div>  <!-- row -->